<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="haifa.haifa4.FragmentsTabs.fTabFertilizante">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.CardView
            android:id="@+id/card3"
            app:cardElevation="8dp"
            android:layout_width="match_parent"
                  android:elevation="1dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="1dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:elevation="0dp">


                <Spinner
                    android:layout_width="342dp"
                    android:layout_height="40dp"
                    android:id="@+id/spinnerFertilizante"
                    android:elevation="0dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:animateLayoutChanges="false"
                    android:textSize="20sp"
                    android:textColor="#02b308" />

                <TextView
                    android:text="11-0-0+16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtViewLabelFormula"
                    android:layout_below="@+id/spinnerFertilizante"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <TextView
                android:text="Fertilizante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblTitulo"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/spinnerFertilizante" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</FrameLayout>
